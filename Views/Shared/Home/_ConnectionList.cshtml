@using FTP_Client.Models
@model List<Connection>

@foreach (var connection in Model)
{
    <div class="col-md-4 mt-2">
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between" id="card-@connection.ID">
                    <h4 class="card-title">@(connection.ConnectionName) -  @(connection.IPAddress):@(connection.Port)</h4>
                    <svg style="cursor: pointer" xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-three-dots-vertical dropdown-toggle" viewBox="0 0 16 16">
                        <path d="M9.5 13a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0zm0-5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0zm0-5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0z" />
                    </svg>
                </div>
                <div class="media">
                    <i class="ti-world icon-md text-info d-flex align-self-start me-3"></i>
                    <div class="media-body">
                        <p class="card-text">Last Active Connection: @(connection.LastConnectionDate?.ToString("dd dddd, MMM yyyy hh:mm tt"))</p>
                        <button class="btn btn-primary" onclick="getConnectPopup('@connection.ID')">Connect</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@if (Model.Count == 0)
{
    <h4 class="text-center mt-3">No Connections Added Yet <a href="javascript:void(0);" onclick="getNewConnectionPopup()">New Connection</a></h4>
}