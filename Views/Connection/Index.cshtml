                            {
                                <tr>
                                    <td>
                                        <input type="checkbox" class="form-check-input" />
                                    </td>
                                    <td>
                                        <img src="~/imgs/folder.png" width="25" height="25" draggable="false" />
                                    </td>
                                    <td>
                                        <a href="">My Projects</a>
                                    </td>
