@{
    ViewData["Title"] = "192.168.1.2:21 Connection";
}

<style>
    .max-height-card
    {
        max-height: 700px;
        overflow: auto;
    }
</style>

<div class="row mt-4">
    <div class="col-md-12">
        <h4>Connected to 192.168.1.2:21</h4>
    </div>
</div>

<hr class="my-2"  />

<div class="row mt-3">
    <div class="col-md-6">
        <div class="card max-height-card">
            <div class="card-header">
                <div class="d-flex align-items-center justify-content-between mb-2">
                    <h4 class="card-title">Your Computer - 192.168.1.3</h4>
                    <button class="btn btn-primary">Upload</button>
                </div>
                <input type="text" class="form-control" value="D:\Ahmed-Projects" readonly  />
            </div>
            <div class="card-body">
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                <div class="form-group">
                                    <input type="checkbox" class="form-check-input" />
                                </div>
                            </th>
                            <th></th>
                            <th>File Name</th>
                            <th>Last Date Modified</th>
                            <th>Size</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 1; i <= 7; i++)
                        {
