@page
@model FTP_Client.Pages.LoginModel
@{
    Layout = "~/Pages/Shared/_LoginLayout.cshtml";
    ViewData["Title"] = "Login";
}

<style>
    body, html {
        background-image: url('https://i.imgur.com/xhiRfL6.jpg');
        height: 100%;
    }

    #profile-img {
        height: 180px;
    }

    .h-80 {
        height: 80% !important;
    }
</style>

<div class="container h-80">
    <div class="row align-items-center h-100">
        <div class="col-4 mx-auto" style="margin-top: 110px;">
            <div class="text-center card">
                <div class="card-body">
                    <a class="navbar-brand brand-logo">
                        <img id="profile-img" class="rounded-circle profile-img-card" src="~/imgs/ftp.png" />
                        <div class="mt-2">
                            FTP Client
                        </div>
                    </a>
                    <p id="login-err-msg" class="profile-name-card"></p>
                    <form onsubmit="return loginForm(event, 'login-err-msg')" class="form-signin" method="post" asp-action="/Login">
                        <input type="text" name="LoginViewModel.Username" id="inputUsername" class="text-center form-control form-group" placeholder="username" required autofocus>
                        <span asp-validation-for="LoginViewModel.Username" class="text-danger"></span>

                        <input type="password" name="LoginViewModel.Password" id="inputPassword" class="text-center form-control form-group" placeholder="password" required>
                        <span asp-validation-for="LoginViewModel.Password" class="text-danger"></span>

                        <button class="btn btn-lg btn-primary btn-block btn-signin" type="submit">Login</button>
                    </form><!-- /form -->

                    <div class="row mt-2">
                        <div class="col-md-12">
                            <a asp-page="/Register" class="btn btn-success btn btn-lg btn-block btn-signin">Create an Account</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>