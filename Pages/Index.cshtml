@page
@model IndexModel
@{
    ViewData["Title"] = "Control Panel";
}

<style>
    .table-darkBGImg
    {
        background: #1E283D url("imgs/dashboard/darkBG.png") repeat-y right top
    }
</style>

<div class="row mt-3">
    <div class="col-md-12">
        <a asp-page="/Connection" class="btn btn-primary">New Connection</a>
    </div>
</div>

<hr class="my-4" />

<div class="row flex-grow">
    <div class="col-12 grid-margin stretch-card">
        <div class="card card-rounded table-darkBGImg">
            <div class="card-body">
                <div class="col-sm-12">
                    <h3 class="text-white upgrade-info mb-0">
                        Get Access to Tons of <span class="fw-bold">Features</span> of FTP Client
                    </h3>
                    <div class="mt-4">
                        <a href="#" class="btn btn-info upgrade-btn">Buy Now!</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row mt-2">
    @for (int i = 0; i < 5; i++)
    {
        <div class="col-md-4 mt-2" style="cursor: pointer" title="Click to Connect">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">192.168.1.@(i+2):21</h4>
                    <div class="media">
                        <i class="ti-world icon-md text-info d-flex align-self-start me-3"></i>
                        <div class="media-body">
                            <p class="card-text">Last Active Connection: @DateTime.Now.AddDays(i+1-i).ToString("dd dddd, MMM yyyy hh:mm tt")</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>